<div class="row">
    <div class="col-md-5">
        <div class="alert alert-info">
            <span><strong>Completed todos</strong></span>
        </div>
        {{#each model as |todo|}}
            {{#if todo.compl}}
                <div class="panel panel-success">
                    <div class="panel-heading todo-title">
                        <span>
                            <strong>{{todo.title}}</strong>
                        </span>
                    </div>
                    <div class="panel-body todo-body">
                        {{todo.desc}}
                    </div>
                    <div class="panel-footer todo-footer">
                        <div class="text-right"> 
                            <button class="btn btn-danger" {{action "deleteTodo" todo}} >Delete</button>
                        </div>
                    </div>
                </div>
            {{/if}}    
        {{/each}}
        
    </div>
    <div class="col-md-offset-1 col-md-5">
        <div class="alert alert-info"><span><strong>Undone Todos</strong></span></div> 
        {{#each model as |todo|}}
            {{#unless todo.compl}}
                <div class="panel panel-primary">
                    <div class="panel-heading todo-title">
                        <span>
                            <strong>{{todo.title}}</strong>
                        </span>
                    </div>
                    <div class="panel-body todo-body">
                        {{todo.desc}}
                    </div>
                    <div class="panel-footer todo-footer">
                        {{#if todo.started}}
                            <button class="btn btn-success" {{action "finishTodo" todo}}>Finish</button>
                        {{else}}
                            <button class="btn btn-default" {{action "startTodo" todo}}>Start</button>
                        {{/if}}
                        <span class="text-right">
                            {{#link-to "todo.edit" todo.id class="btn btn-primary"}}
                                Edit
                            {{/link-to}}
                            <button class="btn btn-danger" {{action "deleteTodo" todo}} >Delete</button>
                        </span>
                    </div>
                </div>
            {{/unless}}
        {{/each}}
    </div>
</div>
